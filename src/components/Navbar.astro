<nav
  class="flex items-center justify-between py-8 px-12 bg-white fixed top-0 left-0 w-full z-51"
>
  <div class="flex gap-10">
    <a
      href="#home"
      class="font-heading uppercase text-[13px] font-bold text-blue-600 border-b-2 border-blue-600 pb-0.5 tracking-wide"
    >
      Home
    </a>
    <a
      href="#projects"
      class="font-heading uppercase text-[13px] font-bold text-gray-900 hover:text-blue-600 transition-colors tracking-wide"
    >
      Projects
    </a>
    <a
      href="#contact"
      class="font-heading uppercase text-[13px] font-bold text-gray-900 hover:text-blue-600 transition-colors tracking-wide"
    >
      Contact
    </a>
  </div>

  <div class="flex items-center gap-6">
