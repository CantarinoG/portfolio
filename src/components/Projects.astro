---
import ProjectCard from "./ProjectCard.astro";

// Placeholder data
const placeholderProjects = [
  { title: "Project One", href: "#" },
  { title: "Project Two", href: "#" },
  { title: "Project Three", href: "#" },
  { title: "Project Four", href: "#" },
  { title: "Project Five", href: "#" },
  { title: "Project Six", href: "#" },
  { title: "Project Seven", href: "#" },
  { title: "Project Eight", href: "#" },
];
---

<section id="projects" class="bg-gray-50 min-h-screen">
  <div
    class="bg-white px-12 py-8 flex items-center border-b border-gray-100 min-h-[118px]"
  >
    <div class="leading-[0.8] tracking-tighter">
      <div class="font-heading font-[800] text-[34px] text-blue-600 uppercase">
        Projects
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 w-full">
    {
      placeholderProjects.map((project) => (
        <ProjectCard title={project.title} href={project.href} />
      ))
    }
  </div>
</section>
