---
import ProjectPreviewCard from "./ProjectPreviewCard.astro";
import projects from "../data/projects.json";
---

<section id="projects" class="bg-gray-50">
  <div
    class="bg-gray-50 px-12 py-8 flex items-center border-b border-gray-100 min-h-[118px]"
  >
    <div class="leading-[0.8] tracking-tighter">
      <div class="font-heading font-[800] text-[34px] text-blue-600 uppercase">
        Projects
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 w-full">
    {
      projects.map((project) => (
        <ProjectPreviewCard
          title={project.title}
          href={project.href}
          imageSrc={project.imageSrc}
          hoverImages={project.hoverImages}
        />
      ))
    }
  </div>
</section>
